generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  slug        String    @unique
  description String?
  media       Media[]   @relation("CategoryMedia") // Relation to Media
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  media       Media[]  @relation("ProductMedia") // Relation to Media
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Media {
  id         Int       @id @default(autoincrement())
  url        String
  type       String
  hoverUrl   String?
  product    Product?  @relation("ProductMedia", fields: [productId], references: [id]) // Correct relation to Product
  productId  Int?
  category   Category? @relation("CategoryMedia", fields: [categoryId], references: [id]) // Correct relation to Category
  categoryId Int?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
